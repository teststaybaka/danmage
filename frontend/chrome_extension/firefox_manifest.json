    {
      "matches": [
        "https://static.crunchyroll.com/*"
      ],
      "all_frames": true,
      "js": [
        "content_script/index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "identity",
    "https://www.danmage.com/"
  ],
  "browser_specific_settings": {
